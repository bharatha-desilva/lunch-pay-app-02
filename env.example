# LunchPay Environment Configuration Template
# =============================================
# Copy this file to .env.local for development
# Update values according to your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Identity
VITE_APP_NAME="LunchPay"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API Endpoint
VITE_API_BASE_URL="http://localhost:3001/api"

# API Request Configuration
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
VITE_AUTH_TOKEN_EXPIRY="24h"
VITE_SESSION_TIMEOUT=1800000
VITE_ENABLE_AUTH_PERSISTENCE=true

# Password Requirements
VITE_PASSWORD_MIN_LENGTH=8

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Core Features
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_GROUP_CREATION=true
VITE_ENABLE_EXPENSE_CATEGORIES=true
VITE_ENABLE_UNEQUAL_SPLITTING=true

# Advanced Features
VITE_ENABLE_EXPENSE_SEARCH=true
VITE_ENABLE_SETTLEMENT_TRACKING=true
VITE_ENABLE_BALANCE_HISTORY=true

# Experimental Features (disabled by default)
VITE_ENABLE_RECURRING_EXPENSES=false
VITE_ENABLE_EXPENSE_PHOTOS=false
VITE_ENABLE_CURRENCY_CONVERSION=false

# =============================================================================
# BUSINESS RULES & LIMITS
# =============================================================================

# Group Limits
VITE_MAX_GROUP_MEMBERS=20
VITE_MAX_GROUPS_PER_USER=10

# Expense Limits
VITE_MAX_EXPENSE_AMOUNT=10000
VITE_MAX_EXPENSES_PER_DAY=50

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=60
VITE_RATE_LIMIT_WINDOW=60000
VITE_RATE_LIMIT_BURST=10

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Configuration
VITE_LOG_LEVEL="info"
VITE_ENABLE_DEBUG_LOGS=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Error Reporting
VITE_ERROR_REPORTING_ENABLED=true
VITE_ERROR_SAMPLE_RATE=1.0

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Error Tracking (Sentry)
VITE_SENTRY_DSN=""

# Analytics (Google Analytics)
VITE_ANALYTICS_ID=""

# User Behavior (Hotjar)
VITE_HOTJAR_ID=""

# Support Contact
VITE_SUPPORT_EMAIL="help@lunchpay.app"

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Interaction Timing
VITE_BUTTON_DEBOUNCE_MS=1000
VITE_SEARCH_DEBOUNCE_MS=500
VITE_TOAST_DURATION=4000

# Theme Configuration
VITE_DEFAULT_THEME="light"
VITE_ENABLE_DARK_MODE=true

# =============================================================================
# DEVELOPMENT-ONLY VARIABLES
# =============================================================================

# API Mocking (Development Only)
VITE_ENABLE_API_MOCKING=false
VITE_MOCK_DELAY=500

# Development Tools
VITE_SHOW_DEV_TOOLS=false
VITE_ENABLE_REDUX_DEVTOOLS=false

# =============================================================================
# SECURITY HEADERS & CSP
# =============================================================================

# Content Security Policy
VITE_CSP_ENABLED=false
VITE_CSP_REPORT_ONLY=true

# Security Headers
VITE_HTTPS_ONLY=false
VITE_HSTS_MAX_AGE=31536000

# =============================================================================
# PLATFORM-SPECIFIC VARIABLES
# =============================================================================

# Domain Configuration
VITE_APP_DOMAIN=""
VITE_APP_URL=""

# CDN Configuration
VITE_CDN_URL=""
VITE_ASSETS_URL=""

# =============================================================================
# NOTES
# =============================================================================

# 1. Variables prefixed with VITE_ are available in the client-side code
# 2. Secret values should NEVER be prefixed with VITE_
# 3. Boolean values should be strings: "true" or "false"
# 4. Numeric values should be strings that can be parsed
# 5. URLs should not have trailing slashes
# 6. For production, use secure values and enable security features
